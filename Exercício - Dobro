package dobro;
import java.util.Scanner;
public class Dobro {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Digite um número: ");
        int num = in.nextInt();
        
        int total = dobro(num);
        System.out.println("O dobro de "  + num + "é = " + total);
        
        
    }
       public static int dobro(int x) {
            int res = x * 2;
            return res;
    }
    
}
